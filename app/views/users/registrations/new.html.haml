- content_for :pagetitle do 
  Create Account
/ Content
.content
  / Page Header
  .page-header
    .container
      .sixteen.columns
        %h1.page-title
          Create your account
          %span Give us your basic information
        %ul.breadcrumb
          %li
            =link_to t(:home), root_path
            %span.divider Â»
          %li.active Create A Plan
  / Start Content
  .container.main
    .sixteen.columns
      .row
        = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' } ) do |f|
          %ul.list-style
            - resource.errors.full_messages.each do |e|
              %li.arrow-list=e
          = f.input :plan_slug, as: :hidden
          .form-row
            %label.form-label= t(:email)
            .form-item
              = f.input :email, :error => false, :label => false, :class => 'small'
          .form-row
            %label.form-label= t(:password)
            .form-item
              = f.input :password, :required => true, :error => false, :label => false, :class => 'small'
          .form-row
            %label.form-label= t(:password_confirmation)
            .form-item
              = f.input :password_confirmation, :required => true, :error => false, :label => false, :class => 'small'
          = f.simple_fields_for :account do |account_form|
            .form-row
              %label.form-label= t(:business_name)
              .form-item
                = account_form.input :name, :required => true, :error => false, :label => false, :class => 'small'
            .form-row
              %label.form-label= t(:address)
              .form-item
                = account_form.input :address, :error => false, :label => false, :class => 'small'
            .form-row
              %label.form-label= t(:address2)
              .form-item
                = account_form.input :address2, :error => false, :label => false, :class => 'small'
            .form-row
              %label.form-label= t(:city)
              .form-item
                = account_form.input :city, :error => false, :label => false, :class => 'small'
            .form-row
              %label.form-label= t(:state)
              .form-item
                = account_form.input :state, :collection => us_states,  :as => :select, include_blank: true, :label => false
            .form-row
              %label.form-label= t(:zip)
              .form-item
                = account_form.input :zip, :error => false, :label => false, :class => 'small'
            .form-row
              %label.form-label= t(:phone)
              .form-item
                = account_form.input :phone, :error => false, :label => false, :class => 'small'
            .form-row
              %label.form-label= t(:website)
              .form-item
                = account_form.input :website, :error => false, :label => false, :class => 'small'
            %label.form-label= t(:subscriptions_type)
            .form-item
              = f.input :subscriptions_type, :collection => subscriptions_type_list,  :as => :select, include_blank: false, :label => false
          .form-row
            %label.form-label
              By Pressing the Create Account button you agree to the 
              = link_to 'terms and conditions', '#'
            .form-item
              = f.button :submit, :class => 'pull-right btn btn-info', :value => 'Create Account'



