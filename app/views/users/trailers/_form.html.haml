= simple_form_for([:users, trailer], :html => {:class => 'form-horizontal' }) do |f|
  .mws-form-row
    %label.mws-form-label= t(:name)
    .mws-form-item
    = f.input :name, :label => false
  .mws-form-row
    %label.mws-form-label= t(:annual_inspection_pdf)
    .mws-form-item
      = f.input :annual_inspection_pdf, :label => false
  .mws-form-row
    %label.mws-form-label= t(:insurance_pdf)
    .mws-form-item
      = f.input :insurance_pdf, :label => false
  .mws-form-row
    %label.mws-form-label= t(:registration_pdf)
    .mws-form-item
      = f.input :registration_pdf, :label => false
  .mws-form-row
    %label.mws-form-label= t(:trailer_type)
    .mws-form-item
    = f.input :trailer_type, :collection => trailer_type_list,  :as => :select, include_blank: false, :label => false, prompt: "Choose a Trailer Type"
  .mws-form-row
    %label.mws-form-label= t(:length)
    .mws-form-item
    = f.input :length, :label => false
  .mws-form-row
    %label.mws-form-label= t(:width)
    .mws-form-item
    = f.input :width, :label => false
  .mws-form-row
    %label.mws-form-label= t(:height)
    .mws-form-item
    = f.input :height, :label => false
  .mws-form-row
    %label.mws-form-label= t(:gross_vehicle_weight_rating)
    .mws-form-item
    = f.input :gross_vehicle_weight_rating, :label => false
  .mws-form-row
    %label.mws-form-label= t(:suspension)
    .mws-form-item
    = f.input :suspension, :collection => suspension_list,  :as => :select, include_blank: false, :label => false
  .mws-form-row
    %label.mws-form-label= t(:axle_capacity)
    .mws-form-item
    = f.input :axle_capacity, :label => false
  .mws-form-row
    %label.mws-form-label= t(:wheels)
    .mws-form-item
    = f.input :wheels, :label => false
  .mws-form-row
    %label.mws-form-label= t(:tires)
    .mws-form-item
    = f.input :tires, :label => false
  .mws-form-row
    %label.mws-form-label= t(:vin)
    .mws-form-item
    = f.input :vehicle_identification_number, :label => false
  .mws-form-row
    %label.mws-form-label= t(:tag)
    .mws-form-item
    = f.input :vehicle_tag, :label => false
  .mws-form-row
    %label.mws-form-label= t(:annual_inspection)
    .mws-form-item
    = f.input :annual_inspection, :label => false, :input_html => { :class => 'datepicker'}
  .mws-form-row
    %label.mws-form-label= t(:year_build)
    .mws-form-item
    = f.input :year_build, :label => false
  .mws-form-row
    %label.mws-form-label= t(:manufacturer)
    .mws-form-item
    = f.input :manufacturer, :label => false
  .mws-form-row
    %label.mws-form-label= t(:vented)
    .mws-form-item
    = f.input :vented, :label => false
  .mws-form-row
    %label.mws-form-label= t(:photo)
    .mws-form-item
    = f.input :photo, :label => false
  .mws-form-row
    .mws-form-item
    = f.button :submit, :class => 'pull-right btn btn-info'

